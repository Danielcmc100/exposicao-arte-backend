Table obras{
    id integer [primary key]
    titulo varchar
    body text [note: 'Content of the post']
    user_id integer [not null]
    status varchar
    created_at timestamp
    ano_producao timestamp
    id_categoria int
    tecnica_criacao varchar
    altura float
    largura float
    comprimento float
    peso float
    id_artista int
    preco float
    tags list[varchar]
}

Ref: users.id < obras.id_artista

Table eventos{
  id int
